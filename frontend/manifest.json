{
  "manifest_version": 3,
  "name": "PR Review Tone Assistant",
  "version": "1.0",
  "description": "Suggests emotionally intelligent rewrites for PR comments on GitHub.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://github.com/*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
